{
  "name": "Playlist",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Playlist name"
    },
    "description": {
      "type": "string",
      "description": "Playlist description"
    },
    "track_ids": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Array of track IDs in playlist"
    },
    "is_smart": {
      "type": "boolean",
      "default": false,
      "description": "Whether this is a smart playlist"
    },
    "smart_criteria": {
      "type": "object",
      "description": "Smart playlist criteria",
      "properties": {
        "match_all": {
          "type": "boolean"
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "field": {
                "type": "string"
              },
              "operator": {
                "type": "string"
              },
              "value": {
                "type": "any"
              }
            }
          }
        }
      }
    },
    "cover_art_url": {
      "type": "string",
      "description": "Custom playlist cover art"
    }
  },
  "required": [
    "name"
  ]
}